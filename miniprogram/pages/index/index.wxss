/**index.wxss**/
.home {
  width: 100%;
  font-size: 24rpx;
  background-color: #fff;
}
.swiper {
  height: 400rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
.store {
  display: flex;
  align-items: center;
  margin: 30rpx 20rpx;
}
.store-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.store-info {
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.store-name {
  display: flex;
  align-items: center;
  font-size: 40rpx;
}
.store-state {
  margin-left: 20rpx;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 5rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #ffbd00;
  border-radius: 10rpx;
}
.store-desc {
  margin: 15rpx 0;
}
.store-ad {
  display: flex;
  align-items: center;
}
.ad-content {
  margin-right: 20rpx;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 5rpx;
  text-align: center;
  color: #ffffff;
  background-color: #ff5100;
  border-radius: 10rpx;
}
.store-connection {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.store-address {
  display: flex;
  width: 70%;
}
.store-address image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.map-phone {
  position: relative;
  display: flex;
  align-items: center;
}
.mp-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}
.line {
  width: 4rpx;
  height: 50rpx;
  background-color: #eeeeee;
}
.mp-item image {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 10rpx;
}
.h-menu {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  margin: 20rpx 0;
}
.h-menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  width: 50%;
  box-sizing: border-box;
}
.h-menu-item image {
  width: 96rpx;
  height: 96rpx;
  margin-right: 20rpx;
}
.h-menu-info {
  display: flex;
  flex-direction: column;
}
.h-menu-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.h-menu-content {
  color: #666666;
}
