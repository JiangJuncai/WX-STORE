/* miniprogram/pages/order/order.wxss */
.order-page {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}
.order-item {
  width: calc(100vw - 40rpx);
  height: 200rpx;
  background-color: #f9ba48;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 20rpx 0;
  display: flex;
}
.order-left {
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.order-title {
  margin: 20rpx 0 10rpx;
  font-weight: bold;
}
.order-date {
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
}
.order-info {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx;
}
.food-count {
  font-size: 24rpx;
  color: #666;
  margin-right: 30rpx;
}
.food-price {
  font-size: 40rpx;
  color: #ff4d39;
}
.order-right {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
