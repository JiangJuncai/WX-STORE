/* miniprogram/pages/coupon/coupon.wxss */
page {
  box-sizing: border-box;
  margin: 0;
  padding: 10rpx 20rpx;
  height: 100%;
  background-color: #fff;
}
.coupon-page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}
.coupon {
  display: inline-block;
  overflow: hidden;
  border-radius: 20rpx;
  margin: 10rpx 0;
}
.coupon-left {
  float: left;
  width: 440rpx;
  height: 200rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
}
.money {
  position: relative;
  z-index: 9;
}
.money-text {
  font-size: 32rpx;
}
.money-number {
  font-size: 48rpx;
  margin: 0 10rpx;
}
.coupon-info {
  position: relative;
  z-index: 9;
  font-size: 24rpx;
}
.coupon-info:first {
  margin: 20rpx 0;
}
.coupon-left::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: radial-gradient(circle at right top, transparent 20rpx, #f9ba48 20rpx, #f9ba48 20rpx);
}
.coupon-left::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: radial-gradient(circle at right bottom, transparent 20rpx, #f9ba48 20rpx, #f9ba48 20rpx);
}
.coupon-con {
  float: left;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  line-height: 200rpx;
  text-align: center;
}
.coupon-con text {
  position: relative;
  z-index: 9;
  font-size: 32rpx;
}
.coupon-con::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: radial-gradient(circle at left top, transparent 20rpx, #f9ba48 20rpx, #f9ba48 20rpx);
}
.coupon-con::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: radial-gradient(circle at left bottom, transparent 20rpx, #f9ba48 20rpx, #f9ba48 20rpx);
}
.splice-line {
  position: absolute;
  bottom: 20rpx;
  left: 0rpx;
  width: 10rpx;
  height: 160rpx;
  border-left: 1rpx dashed #333;
  z-index: 9;
}
.got {
  position: absolute;
  bottom: -20rpx;
  right: -10rpx;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 50%;
  border: 4rpx solid #666;
  color: #666;
  z-index: 9;
  transform: rotateZ(-20deg);
  font-size: 32rpx;
}
