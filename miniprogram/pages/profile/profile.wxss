/* miniprogram/pages/profile/profile.wxss */
.profile {
  height: 100vh;
  padding: 0rpx 20rpx;
}
.userInfo {
  height: 25vh;
  display: flex;
  align-items: center;
  background-color: #ffbd00;
}
.userInfo image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 40rpx;
}
.userInfo text {
  font-size: 40rpx;
}
.p-menu {
  display: flex;
  width: calc(100vw - 40rpx);
  height: 180rpx;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  border: 1rpx dashed #eee;
}
.p-menu-item,
.p-service-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.p-menu-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}
.p-service {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 1rpx dashed #eee;
}
.p-service-menu {
  display: flex;
  width: calc(100vw - 40rpx);
  height: 160rpx;
}
.p-service-title {
  margin: 20rpx 30rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}
.p-service-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 20rpx;
}
